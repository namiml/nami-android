<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Header" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/baseline_4x</item>
        <item name="android:paddingEnd">@dimen/baseline_4x</item>
    </style>

    <style name="AppTheme.Header.6" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="AppTheme.Body" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:paddingStart">@dimen/baseline_4x</item>
        <item name="android:paddingEnd">@dimen/baseline_4x</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

</resources>
